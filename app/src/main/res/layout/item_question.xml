<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_twenty_four"
        android:background="@color/colorWhite"
        app:layout_constraintTop_toTopOf="parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnAction"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/ic_add_circle"
            android:layout_marginStart="@dimen/margin_twenty_four"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtQuestion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_sixteen"
            android:layout_marginEnd="@dimen/margin_twenty_four"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/text_fourteen"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnAction"
            app:layout_constraintTop_toTopOf="@+id/btnAction"
            app:layout_constraintBottom_toBottomOf="@+id/btnAction"
            tools:text="O quê é o desafio de 52 semanas?"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtAnswer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_fourteen"
            app:layout_constraintEnd_toEndOf="@id/txtQuestion"
            app:layout_constraintStart_toStartOf="@id/txtQuestion"
            android:layout_marginTop="@dimen/margin_ten"
            app:layout_constraintTop_toBottomOf="@+id/txtQuestion"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="Resposta aaaaaaaaaaaasd adad ad ad a da dad a da da da dad asd ad a a dasd adsa dasd"/>

    <View
            android:id="@+id/viewDivisor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSofterGreyThree"
            android:layout_marginTop="@dimen/margin_twenty_four"
            app:layout_constraintTop_toBottomOf="@+id/txtAnswer"/>

</androidx.constraintlayout.widget.ConstraintLayout>