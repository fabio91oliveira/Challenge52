<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardWeek"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@anim/animation"
        android:clickable="true"
        app:cardCornerRadius="@dimen/margin_eight"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true"
        android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contentCard"
            android:layout_marginTop="@dimen/margin_six"
            android:layout_marginBottom="@dimen/margin_six">

        <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/chkWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_sixteen"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtWeek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="@+id/chkWeek"
                app:layout_constraintBottom_toBottomOf="@+id/chkWeek"
                app:layout_constraintStart_toEndOf="@id/chkWeek"
                android:layout_marginStart="@dimen/margin_twenty_eight"
                tools:text="#42"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/text_thirty"
                app:layout_constraintTop_toTopOf="@+id/chkWeek"
                app:layout_constraintBottom_toBottomOf="@+id/chkWeek"
                app:layout_constraintStart_toEndOf="@id/txtWeek"
                android:layout_marginStart="@dimen/margin_twenty_eight"
                tools:text="R$ 35.00"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtYear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_fourteen"
                android:includeFontPadding="false"
                android:textColor="@color/colorBlack"
                android:layout_marginEnd="@dimen/margin_twenty_four"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="2019"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtDay"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textSize="@dimen/text_forty"
                android:textStyle="bold"
                android:includeFontPadding="false"
                android:textColor="@color/colorAccent"
                app:layout_constraintTop_toBottomOf="@+id/txtYear"
                app:layout_constraintStart_toStartOf="@id/txtYear"
                app:layout_constraintEnd_toEndOf="@id/txtYear"
                tools:text="02"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtMonth"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_fourteen"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@+id/txtDay"
                app:layout_constraintStart_toStartOf="@id/txtDay"
                app:layout_constraintEnd_toEndOf="@id/txtDay"
                tools:text="DEZ"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>