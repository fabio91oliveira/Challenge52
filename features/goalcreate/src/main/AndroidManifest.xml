<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="features.goalcreate">

    <application android:theme="@style/AppTheme">
        <activity android:name="oliveira.fabio.challenge52.ui.activity.GoalCreateActivity"
                  android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="oliveira.fabio.challenge52.goalcreate"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name="oliveira.fabio.challenge52.ui.activity.CalendarActivity"
                  android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="oliveira.fabio.challenge52.goalcreate.calendar"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
    </application>
</manifest>