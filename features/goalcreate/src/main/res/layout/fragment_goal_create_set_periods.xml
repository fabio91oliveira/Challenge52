        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDateStart"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_01"
            app:cardCornerRadius="@dimen/spacing_half"
            app:cardElevation="@dimen/spacing_none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_04">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtStartsAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Starts at "
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintBottom_toBottomOf="@+id/txtDateStart"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/txtDateStart" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtDateStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_01"
                    android:layout_marginEnd="@dimen/spacing_06"
                    android:hint="22/01/2020"
                    android:imeOptions="actionDone"
                    android:maxLength="35"
                    android:nextFocusDown="@id/txtDate"
                    android:singleLine="true"
                    android:textColor="@color/color_accent"
                    android:textSize="@dimen/text_size_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/txtStartsAt"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDateStartSuggestions"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_02"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtDateStart"
                    tools:itemCount="1"
                    tools:listitem="@layout/item_suggestion" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

